{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "verify",
            "type": "shell",
            "command": "mvn -B verify",
            "group": "build",
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "test",
            "type": "shell",
            "command": "mvn -B test",
            "group": "test"
        },
        {
            "label": "C++",
            "type": "shell",
            "command": "g++",
            "options": {
                "cwd": "${fileDirname}"
            },
            "args": [
                "${file}", "-o", "${fileBasenameNoExtension}"
            ],
            "group": "build"
        },
        {
            "label": "javac",
            "type": "shell",
            "command": "javac",
            // "problemMatcher":{
            //     "owner": "Java",
            //     "fileLocation":[
            //         "relative",
            //         "${workspaceFolder}"
            //     ],
            //     "pattern":[
            //         {
            //             "regexp": "^([^\\\\s].*)\\\\((\\\\d+,\\\\d+)\\\\):\\\\s*(.*)$",
            //             "file": 1,
            //             "location": 2,
            //             "message": 3
            //         }
            //     ]
            // },
            "args": [
                "${relativeFile}"
            ],
            "group": "build"
        }
    ]
}